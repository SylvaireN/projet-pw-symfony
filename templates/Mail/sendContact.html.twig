{% extends 'base.html.twig' %}

{% block title %}Write - Mail{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>
<nav class="navbar navbar-expand-lg navbar-light bg-light">
    <div class="container">
         <a class="navbar-brand" href="{{ path('app_home') }}">Projet</a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNav">
            <ul class="navbar-nav">
            {% if app.user %}
                <li class="nav-item ">
                    <a class="nav-link" href="{{ path('app_home') }}">Accueil</a>
                </li>

              
                <li class="nav-item active">
                    <a class="nav-link " href="{{ path('app_write_mail_educateur') }}">Mail à un Educateur</a>
                </li>

                <li class="nav-item">
                    <a class="nav-link" href="{{ path('app_logout') }}">Deconnexion</a>
                </li>
               
            
            {% else %}
                 <li class="nav-item active">
                    <a class="nav-link" href="{{ path('app_home') }}">Accueil</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="{{ path('app_login') }}">Se connecter</a>
                </li>
            {% endif %}
            
            
            
            
            </ul>
        </div>
    </div>
</nav>

<div class="example-wrapper">
 {% if app.user %}
        <div class="mb-3">
            Vous êtes connecté(e) comme {{ app.user.userIdentifier }}, <a href="{{ path('app_logout') }}">Déconnexion</a>
        </div>
    {% endif %}

    <h1>Mail à un Educateur</h1>
   
    <div class="container">
        {{form_start(mailContactForm)}}
           
            {{form_row(mailContactForm.contactid)}}
            {{form_row(mailContactForm.objet)}}
            {{form_row(mailContactForm.message)}}
             
            <button type="submit" class="btn btn-primary">valider</button>
        {{form_end(mailContactForm)}}
    </div>
</div>


{% endblock %}
